---
export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Innovative, dynamic and results-driven Frontend Developer with 5+ years of experience developing web-based software applications">
		<meta name="og:type" content="website" />
		<meta name="og:title" content={title} />
		<title>{title}</title>
		<!-- head -->
        <script
          type="text/partytown"
          src="https://www.googletagmanager.com/gtag/js?id=9XR1WWPXZ9"
        >
        </script>
        <script type="text/partytown">
          window.dataLayer = window.dataLayer || [];
          function gtag() {
            dataLayer.push(arguments);
          }
          gtag("js", new Date());
          gtag("config", "G-9XR1WWPXZ9");
        </script>
        <!-- more head -->
	</head>
	<body class="py-10">
		<slot />
	</body>

</html>

